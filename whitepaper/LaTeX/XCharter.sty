\newcommand{\textfrac}[3][]{% like \textfrac[1]{7}{8}
  \mbox{%
    \ifthenelse{\not\equal{#1}{}}%Test for integer portion [optional #1]
      {\textlf{#1}\kern.05em}{}%         
    \textsu{#2}% numerator
    \StrRight{#2}{1}[\@digit@]%
    % look for  1, 2, 3, 4, 7
    \ifcase\@digit@% 0
    \or% 1
    \or\kern.03em% 2
    \or\kern-.01em% 3
    \or%\kern-.01em% 4
    \or%\kern.01em% 5
    \or\kern.01em% 6
    \or\kern-.09em% 7
    \fi%
    \kern\XCh@foresolidus\textfractionsolidus\kern\XCh@aftsolidus%
    \StrLeft{#3}{1}[\@digit@]%
    % look for 1, 4, 5, 7
    \ifcase\@digit@% 0
    \or\kern -.02em% 1
    \or\kern .01em% 2
    \or\kern -.02em% 3
    \or\kern -.08em% 4
    \or\kern -.01em% 5
    \or\kern -.03em% 6
    \or\kern .02em% 7
    \fi%
    \textde{#3}%       denominator [#3]
  }%
}

